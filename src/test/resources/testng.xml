<?xml version="1.0" encoding="UTF-8"?>
<suite name="AutomationExerciseTestSuite" verbose="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <test name="CriticalFunctionalityTests">
        <classes>
            <class name="com.automationexercise.tests.UserRegistrationTests">
                <methods>
                    <include name="testSuccessfulUserRegistration"/>
                    <include name="testRegistrationWithExistingEmail"/>
                </methods>
            </class>
            <class name="com.automationexercise.tests.ProductSearchTests">
                <methods>
                    <include name="testSearchAndAddProductToCart"/>
                    <include name="testSearchWithNoResults"/>
                </methods>
            </class>
            <class name="com.automationexercise.tests.LoginLogoutTests">
                <methods>
                    <include name="testSuccessfulLoginAndLogout"/>
                    <include name="testLoginWithInvalidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>