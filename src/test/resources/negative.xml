<?xml version="1.0" encoding="UTF-8"?>
<suite name="AutomationExerciseTestSuite" verbose="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <test name="CriticalFunctionalityPositiveTests">
        <classes>
            <class name="com.automationexercise.UserRegistrationTest">
                <methods>
                    <include name="testCannotRegisterWithEmptyRequiredFields"/>
                </methods>
            </class>
            <class name="com.automationexercise.ProductSearchAddToCartTest">
                <methods>
                    <include name="testSearchWithEmptyQuery"/>
                    <include name="testSearchWithNoResults"/>
                </methods>
            </class>
            <class name="com.automationexercise.LoginLogoutTest">
                <methods>
                    <include name="testCannotLoginWithEmptyFields"/>
                    <include name="testCannotLoginWithInvalidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>